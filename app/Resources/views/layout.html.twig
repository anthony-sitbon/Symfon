{# app/Resources/views/layout.html.twig #}

<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">

        <title>{% block title %}OC Plateforme{% endblock %}</title>

        {% block stylesheets %}
            {# On charge le CSS de bootstrap depuis le site directement #}
            {#                <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css">#}
            <link rel="stylesheet" href="{{ asset('css/bootstrap.min.css') }}">
        {% endblock %}

        {% block mycss %}
        {% endblock %}
    </head>

    <body>
        <div class="container">
            <div id="header" class="jumbotron">
                <h1>Ma plateforme d'annonces</h1>
                <p>
                    projet créé sous Symfony2
                    <br>
                    retrouvé mon code source sur <a href="https://github.com/anthony-sitbon/Symfon" target="_blank">GitHub</a>
                </p>
            </div>

            <div class="row">
                <div id="menu" class="col-md-3">

                    <h3>Les annonces</h3>
                    <ul class="nav nav-pills nav-stacked">
                        <li><a href="{{ path('oc_platform_home') }}">Accueil</a></li>
                            {% if is_granted('ROLE_AUTEUR') %}
                            <li><a href="{{ path('oc_platform_add') }}">Ajouter une annonce</a></li>
                            {% endif %}
                    </ul>

                    {# On affiche les 3 derniers articles #}
                    <h4>Dernières annonces</h4>
                    {{ render(controller("OCPlatformBundle:Advert:menu", {'limit': 3})) }}

                    {#{% if (null != app.user) %}#}
                    {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                        <h3>Espace membre</h3>
                        <ul class="nav nav-pills nav-stacked">
                            <li>{{ 'layout.logged_in_as'|trans({'%username%': app.user.username}, 'FOSUserBundle') }}</li>
                            <li><a href="{{ path('fos_user_security_logout') }}">{{ 'layout.logout'|trans({}, 'FOSUserBundle') }}</a></li>
                        </ul>
                    {% elseif app.request.attributes.get('_route') != 'fos_user_security_login' %}
                        <h3>Identification</h3>
                        {{ render(controller('OCUserBundle:Security:login')) }}
                        <ul class="nav nav-pills nav-stacked">
                            <li>
                                <a href="{{ path('fos_user_registration_register') }}">
                                    S'inscrire
                                </a>
                            </li>
                        </ul>
                    {% endif %}

                </div>



                <div id="content" class="col-md-9">
                    {% block body %}
                    {% endblock %}
                </div>
            </div>

            <hr>

            <footer>
                <p>Anthony Sitbon © {{ 'now'|date('Y') }}.</p>
            </footer>
        </div>

        {% block javascripts %}
            {# Ajoutez ces lignes JavaScript si vous comptez vous servir des fonctionnalités du bootstrap Twitter #}
            {#<script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
            <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>#}
            <script src="{{ asset('js/jquery-2.2.1.min.js') }}"></script>
            {#            <script src="{{ asset('js/jquery-1.12.1.min.js') }}"></script>#}
            <script src="{{ asset('js/bootstrap.min.js') }}"></script>
        {% endblock %}

        {% block myjs %}
        {% endblock %}

    </body>
</html>